package mastermindNeu;

import java.util.Random;
import java.util.Scanner;

public class Mastermind {

	static Spieler s1;
	static Spieler s2;
	static Spieler aktueller;
	static Scanner sc = new Scanner(System.in);
	static Random r = new Random();
	public static void main(String[] args) {
	menu();
	einSpieler();

	}
	public static void menu() {
		System.out.println("MasterMind\n"
				+ "1- Ein Spieler\n"
				+ "2- Zwei Spieler\n"
				+ "3- Programm beenden");
	}
	
	public static void einSpieler() {
		boolean richtigerBuchstabe = true;
		System.out.println("Geben Sie den namen ein");
		String name = sc.next();
		System.out.println("Geben Sie den Farbcode an(nur in großbuchstaben!)");
		String farbcode;
		do {
			farbcode = sc.next();
			for (int i = 0; i < farbcode.length(); i++) {
				if(!(farbcode.charAt(i)!='R'||farbcode.charAt(i)!='G'|| farbcode.charAt(i)!='B' || farbcode.charAt(i)!='Y'|| farbcode.charAt(i)!='O'|| farbcode.charAt(i)!='P')) {
					System.out.println("Bitte gib nur die Folgenden Buchstaben ein (R,G,B,Y,O,P) für den Farbcode ein");
					richtigerBuchstabe = false;
					break;
				}
			}
			if(richtigerBuchstabe!=true) {
				continue;
			}
			if(farbcode.length()!=4) {
				System.out.println("Der Farbcode darf nur die Laenge 4 haben");
				continue;
			}
			break;
			
		}while(true);
		
	}

}
